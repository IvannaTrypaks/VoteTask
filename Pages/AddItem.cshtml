@page
@model VoteTask.Pages.CreateItemModel
@{
    ViewData["Title"] = "Add Item";
}

<form method="post">
    <div class="border p-2 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Item</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Item"></label>
            <input asp-for="@Model.Item.Name" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
    </div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
