@page
@model VoteTask.Pages.ItemsStatsModel
@{
    ViewData["Title"] = "Stats";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Stats</h2>
        </div>
        <div class="col-6">

        </div>
    </div>

    <br /><br />

    <table class="table-borderless table-active" style="width:40%">
        <thead>
            <tr style="text-align:center">
                <th>Name</th>
                <th>Volume</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Items)
            {
                <tr style="text-align:center">
                    <td>@item.Name</td>
                    <td>@item.Volume</td>
                </tr>
            }
        </tbody>
     </table>
</div>
