@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model VoteTask.Pages.VoteModel
@{
    ViewData["Title"] = "Vote";
}


<form method="post" >
    <div class="text-left">
        @{ foreach(var item in Model.Items)
            {
                <div class="form-check">
                    <input type="checkbox" value="@item.Id name="ItemsIds""/>
                    <label>@item.Name</label>
                </div>
            }
        }

        <div class="form-group mt-2">
            <input type="submit" asp-page-handler="vote" value="Vote" class="btn btn-primary" />
        </div>
    </div>
</form>